<div class="jumbotron" xmlns="http://www.w3.org/1999/html">
  <div class="container">
    <h1>Home</h1>
  </div>
</div>

<div class="container">
  <% @questions.each do |q| %>
      <ul class="media-list">
        <li class="media">
          <div class="media-left">
            <img src=<%= gravator(q.email) %>/>
          </div>
          <div class="media-body">
            <h4 class="media-heading"><%= q.email %> answered:</h4>
            <div><%= time_ago_in_words(q.created_at) %> ago</div>
            <%= q.question %>
            <div>
              <a class="btn btn-success btn-xs" href=<%= question_path(q.id) %>>View Answers</a>
            </div>
          </div>
        </li>
      </ul>
  <% end %>
  <% if @questions.empty? %>
      <div class="alert alert-info">No questions asked</div>
  <% end %>
</div>
